{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "module": "es2022",
    "moduleResolution": "node",
    "lib": ["ES2022", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "types": ["vitest/globals"],
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "ts-node": {
    "esm": true,
    "compiler": "typescript",
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts", "src/main/interactive/worker-script.ts", "examples/genaicode_plugins/**/*.ts"],
  "exclude": ["node_modules", "src/main/ui/frontend/**/*"]
}
